<?xml version="1.0" encoding="UTF-8"?>
<project name="python-utility" default="build" basedir=".">
    <property name="workspace" value="${basedir}"/>
    <target name="build">
        <delete dir="${workspace}/build"/>
        <mkdir dir="${workspace}/build/log"/>
        <exec executable="${workspace}/run-lint-check.sh">
            <arg value="--ci-mode"/>
        </exec>
        <exec executable="${workspace}/run-code-style-check.sh">
            <arg value="--ci-mode"/>
        </exec>
        <exec executable="${workspace}/run-tests.sh">
            <arg value="--ci-mode"/>
        </exec>
    </target>
</project>
